VITE_API_URL=http://localhost:5000/api
# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///aerium.db

# Email Configuration (for alert notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@airsense.app

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_RATE_LIMITING=True

# Alert Thresholds
ALERT_CO2_THRESHOLD=1200
ALERT_TEMP_MIN=15
ALERT_TEMP_MAX=28
ALERT_HUMIDITY_THRESHOLD=80

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aerium.log
LOG_MAX_BYTES=10240000
LOG_BACKUP_COUNT=10

# Rate Limiting
RATELIMIT_DEFAULT=200 per day;50 per hour;10 per minute