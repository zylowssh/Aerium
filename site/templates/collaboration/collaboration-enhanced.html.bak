<script>
// Tab Switching
function switchTab(tabName, element) {
    document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
    document.getElementById(tabName).classList.add('active');
    
    document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
    element.classList.add('active');
}

// Load Teams
function loadTeams() {
    fetch('/api/teams')
        .then(r => r.json())
        .then(data => {
            const list = document.getElementById('teams-list');
            const select = document.getElementById('team-select');
            
            if (Array.isArray(data) && data.length) {
                list.innerHTML = data.map(team => `
                    <div class="data-item">
                        <div>
                            <h4>${team.name || team.team_name}</h4>
                            <p>${team.description || team.desc || 'Aucune description'}</p>
                        </div>
                        <div style="text-align: right;">
                            <small>${team.member_count || 0} membres</small>
                        </div>
                    </div>
                `).join('');

                select.innerHTML = '<option value="">Choisir...</option>' + data.map(team => 
                    `<option value="${team.id}">${team.name || team.team_name}</option>`
                ).join('');
            } else {
                list.innerHTML = '<p style="color: #9ca3af; text-align: center;">Aucune √©quipe cr√©√©e</p>';
            }
        })
        .catch(e => console.error('Erreur chargement √©quipes:', e));
}

// Create Team
function handleCreateTeam(event) {
    event.preventDefault();
    const name = document.getElementById('team-name').value;
    const desc = document.getElementById('team-desc').value;
    const type = document.getElementById('team-type').value;
    const statusDiv = document.getElementById('team-status');
    
    statusDiv.className = 'status-message status-info';
    statusDiv.textContent = '‚è≥ Cr√©ation de l\'√©quipe...';
    
    fetch('/api/teams', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ team_name: name, description: desc, team_type: type })
    })
    .then(r => r.json())
    .then(data => {
        if (data.success || data.id) {
            statusDiv.className = 'status-message status-success';
            statusDiv.textContent = '‚úÖ √âquipe cr√©√©e avec succ√®s!';
            document.querySelector('form').reset();
            loadTeams();
        } else {
            throw new Error(data.error || 'Erreur cr√©ation √©quipe');
        }
    })
    .catch(e => {
        statusDiv.className = 'status-message status-error';
        statusDiv.textContent = '‚ùå ' + e.message;
    });
}

// Add Member
function handleAddMember(event) {
    event.preventDefault();
    const teamId = document.getElementById('team-select').value;
    const email = document.getElementById('member-email').value;
    const role = document.getElementById('member-role').value;
    const statusDiv = document.getElementById('member-status');
    
    statusDiv.className = 'status-message status-info';
    statusDiv.textContent = '‚è≥ Ajout du membre...';
    
    fetch('/api/teams/' + teamId + '/members', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, role })
    })
    .then(r => r.json())
    .then(data => {
        if (data.success || data.member_id) {
            statusDiv.className = 'status-message status-success';
            statusDiv.textContent = '‚úÖ Membre ajout√© avec succ√®s!';
            document.querySelector('form').reset();
            loadMembers();
        } else {
            throw new Error(data.error || 'Erreur ajout membre');
        }
    })
    .catch(e => {
        statusDiv.className = 'status-message status-error';
        statusDiv.textContent = '‚ùå ' + e.message;
    });
}

// Load Members
function loadMembers() {
    const teamId = document.getElementById('team-select').value;
    if (!teamId) {
        document.getElementById('members-list').innerHTML = '<p style="color: #9ca3af; text-align: center;">S√©lectionnez une √©quipe</p>';
        return;
    }
    
    fetch('/api/teams/' + teamId + '/members')
        .then(r => r.json())
        .then(data => {
            const list = document.getElementById('members-list');
            if (Array.isArray(data) && data.length) {
                list.innerHTML = '<table class="table"><tbody>' + data.map(member => {
                    const roleClass = 'badge-' + (member.role || 'viewer');
                    return `
                        <tr>
                            <td><strong>${member.name || member.email}</strong></td>
                            <td><small>${member.email}</small></td>
                            <td><span class="badge ${roleClass}">${(member.role || 'viewer').toUpperCase()}</span></td>
                            <td><button class="btn btn-secondary" onclick="removeMember('${member.id}')">Supprimer</button></td>
                        </tr>
                    `;
                }).join('') + '</tbody></table>';
            } else {
