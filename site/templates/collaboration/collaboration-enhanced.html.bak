}

// Share Dashboard
function handleShareDashboard(event) {
    event.preventDefault();
    const name = document.getElementById('dashboard-name').value;
    const dataOptions = Array.from(document.getElementById('share-data').selectedOptions).map(o => o.value);
    const expiry = document.getElementById('share-expiry').value;
    const statusDiv = document.getElementById('share-status');
    
    statusDiv.className = 'status-message status-info';
    statusDiv.textContent = '‚è≥ Cr√©ation du lien de partage...';
    
    fetch('/api/share/dashboard', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
            name, 
            data: dataOptions,
            expires_in: parseInt(expiry)
        })
    })
    .then(r => r.json())
    .then(data => {
        if (data.success || data.share_token) {
            const link = window.location.origin + '/dashboard/shared/' + (data.share_token || 'demo');
            statusDiv.className = 'status-message status-success';
            statusDiv.innerHTML = `‚úÖ Lien cr√©√©!<br><input type="text" value="${link}" readonly style="width: 100%; margin-top: 10px; padding: 8px; border: 1px solid #10b981; border-radius: 4px;" onclick="this.select()">`;
            loadSharedDashboards();
        } else {
            throw new Error(data.error || 'Erreur partage');
        }
    })
    .catch(e => {
        statusDiv.className = 'status-message status-error';
        statusDiv.textContent = '‚ùå ' + e.message;
    });
}

// Load Shared Dashboards
function loadSharedDashboards() {
    fetch('/api/share/dashboard')
        .then(r => r.json())
        .then(data => {
            const list = document.getElementById('shared-dashboards');
            if (Array.isArray(data) && data.length) {
                list.innerHTML = data.map(dash => `
                    <div class="data-item">
                        <div>
                            <h4>${dash.name || dash.title}</h4>
                            <p>${dash.shared_at ? new Date(dash.shared_at).toLocaleDateString('fr-FR') : 'R√©cemment'}</p>
                        </div>
                        <div style="text-align: right;">
                            <button class="btn btn-secondary" onclick="copyLink('${dash.share_token}')">Copier</button>
                        </div>
                    </div>
                `).join('');
            }
        })
        .catch(e => console.error('Erreur tableaux partag√©s:', e));
}

