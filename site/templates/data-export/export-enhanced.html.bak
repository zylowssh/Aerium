<script>
// Tab Switching
function switchTab(tabName, element) {
    // Hide all tabs
    document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
    // Show selected tab
    document.getElementById(tabName).classList.add('active');
    
    // Update button styles
    document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
    element.classList.add('active');
}

// Format Selection
let selectedFormat = 'csv';
function selectFormat(format, element) {
    selectedFormat = format;
    document.getElementById('selected-format').value = format;
    document.querySelectorAll('.btn-format').forEach(btn => btn.classList.remove('active'));
    element.classList.add('active');
}

// Load Sensors on Page Load
document.addEventListener('DOMContentLoaded', () => {
    loadSensorsForSelect();
    loadScheduledExports();
    updateStats();
});

function loadSensorsForSelect() {
    fetch('/api/sensors')
        .then(r => r.json())
        .then(data => {
            const selects = ['quick-sensor', 'sched-sensor'];
            selects.forEach(id => {
                const select = document.getElementById(id);
                if (select) {
                    select.innerHTML = '<option value="">S√©lectionnez...</option>';
                    if (Array.isArray(data) && data.length) {
                        data.forEach(sensor => {
                            const option = document.createElement('option');
                            option.value = sensor.id || 'default';
                            option.textContent = sensor.name || 'Capteur ' + sensor.id;
                            select.appendChild(option);
                        });
                    }
                }
            });
        })
        .catch(e => console.error('Erreur capteurs:', e));
}

// Handle Quick Export
function handleQuickExport(event) {
    event.preventDefault();
    const sensorId = document.getElementById('quick-sensor').value;
    const period = document.getElementById('quick-period').value;
    const format = document.getElementById('selected-format').value;
    const statusDiv = document.getElementById('quick-export-status');

    statusDiv.className = 'status-message status-info';
    statusDiv.textContent = '‚è≥ Pr√©paration de l\'export...';

    fetch('/api/export/simulate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ format, period_days: parseInt(period), sensor_id: sensorId })
    })
    .then(response => format === 'csv' ? response.text() : response.json())
    .then(data => {
        statusDiv.className = 'status-message status-success';
        statusDiv.innerHTML = '‚úÖ Export r√©ussi! Votre fichier a √©t√© t√©l√©charg√©.';
        
        if (format === 'csv' && typeof data === 'string') {
            downloadFile(data, `co2_export_${period}j.csv`, 'text/csv');
        } else if (format !== 'csv') {
            downloadFile(JSON.stringify(data, null, 2), `co2_export_${period}j.${format}`, 'application/json');
        }
        
        updateStats();
        setTimeout(() => statusDiv.style.display = 'none', 5000);
    })
    .catch(e => {
        statusDiv.className = 'status-message status-error';
        statusDiv.textContent = '‚ùå Erreur: ' + e.message;
    });
}

// Handle Detailed Report
function handleDetailedReport(event) {
    event.preventDefault();
    const reportType = document.getElementById('report-type').value;
    const reportFormat = document.getElementById('report-format').value;
    const statusDiv = document.getElementById('report-status');

    statusDiv.className = 'status-message status-info';
    statusDiv.textContent = '‚è≥ G√©n√©ration du rapport ' + reportType + '...';

    fetch('/api/export/simulate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ format: reportFormat, report_type: reportType })
    })
    .then(r => r.json())
    .then(data => {
        if (data.success) {
            statusDiv.className = 'status-message status-success';
            statusDiv.innerHTML = '‚úÖ Rapport g√©n√©r√©! (' + (data.records || 0) + ' enregistrements)';
            updateStats();
            setTimeout(() => statusDiv.style.display = 'none', 5000);
        } else {
            throw new Error(data.error || 'Erreur g√©n√©ration rapport');
        }
    })
    .catch(e => {
        statusDiv.className = 'status-message status-error';
        statusDiv.textContent = '‚ùå ' + e.message;
    });
}

// Handle Comparison
function handleComparison(event) {
    event.preventDefault();
    const start1 = document.getElementById('comp-start1').value;
    const end1 = document.getElementById('comp-end1').value;
