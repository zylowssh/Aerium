// Handle Schedule Export
function handleScheduleExport(event) {
    event.preventDefault();
    const sensorId = document.getElementById('sched-sensor').value;
    const frequency = document.getElementById('sched-frequency').value;
    const format = document.getElementById('sched-format').value;
    const email = document.getElementById('sched-email').value;
    const statusDiv = document.getElementById('schedule-status');

    statusDiv.className = 'status-message status-info';
    statusDiv.textContent = '‚è≥ Programmation de l\'export...';

    fetch('/api/export/schedule', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ sensor_id: sensorId, frequency, format, email })
    })
    .then(r => r.json())
    .then(data => {
        if (data.success || data.id) {
            statusDiv.className = 'status-message status-success';
            statusDiv.textContent = '‚úÖ Export programm√© avec succ√®s!';
            document.querySelector('form').reset();
            loadScheduledExports();
            updateStats();
        } else {
            throw new Error(data.error || 'Erreur programmation');
        }
    })
    .catch(e => {
        statusDiv.className = 'status-message status-error';
        statusDiv.textContent = '‚ùå ' + e.message;
    });
}

// Load Scheduled Exports
function loadScheduledExports() {
    fetch('/api/export/scheduled')
        .then(r => r.json())
        .then(data => {
            const list = document.getElementById('scheduled-list');
            if (Array.isArray(data) && data.length) {
                list.innerHTML = data.map(exp => `
                    <tr>
                        <td>${exp.sensor_name || exp.sensor_id}</td>
                        <td>${exp.frequency}</td>
                        <td>${exp.format.toUpperCase()}</td>
                        <td>${new Date(exp.next_run).toLocaleDateString('fr-FR')}</td>
                        <td><span class="badge badge-pending">Programm√©</span></td>
                        <td><button class="btn btn-secondary" style="width: auto; padding: 6px 12px;" onclick="deleteScheduledExport('${exp.id}')">Supprimer</button></td>
                    </tr>
                `).join('');
            }
        })
        .catch(e => console.error('Erreur exports programm√©s:', e));
}

function deleteScheduledExport(id) {
    if (confirm('Supprimer cet export programm√©?')) {
        fetch('/api/export/scheduled/' + id, { method: 'DELETE' })
            .then(() => loadScheduledExports())
            .catch(e => alert('Erreur: ' + e.message));
    }
}

// Update Stats
function updateStats() {
    document.getElementById('stat-exports').textContent = Math.floor(Math.random() * 50) + 10;
    document.getElementById('stat-scheduled').textContent = Math.floor(Math.random() * 10) + 2;
    document.getElementById('stat-records').textContent = (Math.floor(Math.random() * 50000) + 10000).toLocaleString('fr-FR');
    document.getElementById('stat-storage').textContent = (Math.floor(Math.random() * 500) + 50) + ' MB';
}

// Download Helper
function downloadFile(content, filename, mimeType) {
    const blob = new Blob([content], { type: mimeType });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = filename;
    document.body.appendChild(a);
    a.click();
    window.URL.revokeObjectURL(url);
    document.body.removeChild(a);
}
